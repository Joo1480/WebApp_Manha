@model List<WebApp_Manha.Entidades.Produtos>

<div class="card">
    <div class="card-header">
        Lista de Produtos
    </div>

    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Descrição do Produto
                    </th>
                    <th>
                        Valor
                    </th>
                    <th>
                        Categoria
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.ID</td>
                    <td>@produto.DESCRICAO</td>
                    <td>@produto.VALOR</td>
                    <td>@produto.CATEGORIA.Nome</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>